<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="139dp"
            android:text="Whale Hello There Android"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:fontFamily="monospace" android:textSize="36sp"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.034"/>
    <ImageView
            android:layout_width="112dp"
            android:layout_height="114dp" app:srcCompat="@drawable/andy"
            android:id="@+id/imageView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="464dp"
            app:layout_constraintHorizontal_bias="0.848"/>
    <ImageView
            android:layout_width="109dp"
            android:layout_height="105dp" app:srcCompat="@drawable/andy"
            android:id="@+id/imageView2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="464dp"
            app:layout_constraintHorizontal_bias="0.125"/>
    <ImageView
            android:layout_width="307dp"
            android:layout_height="400dp" app:srcCompat="@drawable/whale"
            android:id="@+id/imageView3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="88dp"
            app:layout_constraintHorizontal_bias="0.365"/>

</android.support.constraint.ConstraintLayout>